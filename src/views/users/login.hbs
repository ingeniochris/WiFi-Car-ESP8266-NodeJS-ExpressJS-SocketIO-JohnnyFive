<div class="container p-5 ">
  <h1>Login</h1>
  <div class="mx-auto " style="width: 20rem;">
    {{> msg}}
  {{> errors}}
    <form action="/app/login" method="POST">
      <div class="form-group">
        <label for="email">Email:</label>
        <input name="email" type="email" class="form-control" placeholder="Registra tu nombre" value="{{email}}"
          required autofocus>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input name="password" type="password" class="form-control" placeholder="Registra tu password"
          name="{{password}}" required>
      </div>


      <button type="submit" class="btn btn-block btn-dark ">Entrar</button>
    </form>
    
  </div>

</div>