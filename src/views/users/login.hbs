<div class="container p-4 position-relative ">
  <h1 class="title1 display-4 font-weight-bold">Login</h1>
  <div class="mx-auto " style="width: 20rem;">
    {{> msg}}
    {{> errors}}
    <form action="/app/login" method="POST">
      <div class="form-group">
        <label for="email"><strong>Email:</strong></label>
        <input name="email" type="email" class="form-control   text-center" placeholder=" Ingresa tu email"
          value="{{email}}" required autofocus>
      </div>
      <div class="form-group">
        <label for="password"><strong>Password:</strong></label>
        <input name="password" type="password" class="form-control  text-center "
          placeholder="Ingresa tu password" name="{{password}}" required>
      </div>
      <div class="form-group text-right">
        <a href="/app/forgot" class="font-weight-lighter txpass">¿Olvidaste tu password? </a>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary position-relative "><strong>Entrar</strong></button>
      </div>
      <div class="form-group text-center">
        <div class="font-weight-bolder ">¿No tienes una cuenta?
          <a href="/app/register" class="font-weight-lighter  tx"> Regístrate</a>
        </div>
      </div>
    </form>
  </div>
</div>